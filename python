class ResponseValidator:

    def validate_response_time_log(self, log_file_path):
        """
        Reads log file, validates response time,
        and returns a dictionary with PASS/FAIL.
        """

        result = {}

        with open(log_file_path, 'r') as file:
            for line in file:
                line = line.strip()
                if not line:
                    continue

                # Example line:
                # ResponseA response_time=120
                parts = line.split()
                response_name = parts[0]

                for part in parts:
                    if "response_time=" in part:
                        response_time = int(part.split("=")[1])

                        if response_time <= 500:
                            result[response_name] = "PASS"
                        else:
                            result[response_name] = "FAIL"

        return result
